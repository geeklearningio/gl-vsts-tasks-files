{
    "manifestVersion": 1,
    "id": "gl-vsts-tasks-files",
    "name": "Files Helpers Build and Release Tasks",
    "version": "0.0.0",
    "publisher": "geeklearningio",    
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Build and Release Management extensions that help you manipulate your files.",
    "categories": [
        "Build and release"
    ],
    "icons": {
        "default": "extension-icon.png"        
    },
    "tags": [
        "file",
        "files",
        "copy",
        "zip",
        "micromatch",
        "multimatch",
        "minimatch"
    ],
    "screenshots": [
        {
            "path": "Screenshots/TestBuild.png"
        },
        {
            "path": "Screenshots/Add-Task-CopyExt.png"
        }
        ,
        {
            "path": "Screenshots/Add-Task-Zip.png"
        }
    ],
    "content": {
        "details": {
            "path": "overview.md"
        },
        "license": {
            "path": "LICENSE.txt"
        }
    },
    "links": {
        "getstarted": {
            "uri": "https://github.com/geeklearningio/gl-vsts-tasks-files/wiki"
        },
        "support": {
            "uri": "https://github.com/geeklearningio/gl-vsts-tasks-files/issues"
        },
        "repository": {
            "uri": "https://github.com/geeklearningio/gl-vsts-tasks-files"
        },
        "issues": {
            "uri": "https://github.com/geeklearningio/gl-vsts-tasks-files/issues"
        }
    },
    "branding": {
        "color": "#008B8B",
        "theme": "dark"
    },  
    "files": [
        {
            "path": "Tasks"
        },
        {
            "path": "Screenshots",
            "addressable": true
        }
    ]
}